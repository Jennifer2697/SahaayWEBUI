    <div class="text-center">
      <div id="buttons">
      <!-- search bar -->
	  <label> <input  class="form-control form-control-lg form-control-borderless" id="query" placeholder="Search here" type="text"/><br>
	    <div id="container">
	    </div>                
	    <br>
	  <!-- Button -->
	  <button id="search-button"  class="btn btn-lg btn-success"  onclick="search_query()">Search</button></label>    

      </div> 
      <div id="container">
	<ul id="results"></ul>
      </div>
      
      </div>     
    </div>
    <script>
      var vid_data;
      var id_list = [];
      var order = "title";
        
               
      // Method for the setting up Youtube Data api v3
      function search_query(){
	  gapi.client.setApiKey("AIzaSyCd00jxfl7g4KY4WdpyFsabcJHcqxK0GjA");
	  gapi.client.load('youtube', 'v3', function() {
	      load_Request();
		
	  });
      }
    
      // Method for requesting the videos 
      function load_Request() {
	var q = $('#query').val();    
	var request = gapi.client.youtube.search.list({
	  q: q,
	  part: 'snippet', 
	  order: order,
	  maxResults: 5
	});
	

	// Fetching the videos
	request.execute(function(response)  {                                                                                    
	  $('#results').empty()
	  var srchItems = response.result.items;                      
	  $.each(srchItems, function(index, item) {
	  vidTitle = item.snippet.title;  
	  videoid  = item.id.videoId;
	  id_list.push(videoid);
	  vid_data = '<pre><iframe class="video w100" width="640" height="360" src="//www.youtube.com/embed/'+ videoid +'"></iframe></pre>';
	  $('#results').append('<pre>' + vidTitle + vid_data +  '</pre>');    

	})  
      })  
	  
      }
  </script> 
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  <script src="https://apis.google.com/js/client.js?onload=googleApiClientReady">  </script>
